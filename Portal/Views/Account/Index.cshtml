@model Portal.Models.Login
@{
    ViewData["Title"] = "Account";
}

<!DOCTYPE html>


<h4 style="text-align: center;">Login</h4>
<div class="row">
    <div class="col-md-4 center-block">
        <form asp-controller="Account" asp-action="Index">
            <p>@ViewData["status"]</p>
            <div class="form-group">
                <label asp-for="Username" class="col-form-label"></label>
                <input asp-for="Username" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-form-label"></label>
                <input asp-for="Password" class="form-control" type="password"/>
            </div>
            <div class="form-group">
                <input asp-for="Appkey" class="form-control" type="hidden" value="@ViewData["appkey"]"/>
                <input type="submit" value="Login" class="btn btn-primary center-block"/>
            </div>
        </form>
    </div>
</div>


<style>
    .center-block {
    display: block;
    margin-left: auto;
    margin-right: auto;
    }
</style>